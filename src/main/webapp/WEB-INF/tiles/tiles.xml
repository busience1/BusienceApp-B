<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

   <!-- main -->
   <definition name="layout-tiles" template="/WEB-INF/views/common/layout.jsp">
       <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
       <put-attribute name="left" value="/WEB-INF/views/common/left.jsp" />
       <put-attribute name="body" value="" />
   </definition>
   <definition name="main" extends="layout-tiles">
       <put-attribute name="body" value="/WEB-INF/views/main.jsp" />
   </definition>
   <definition name="*/*" extends="layout-tiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
   </definition>
    <definition name="*/*/*" extends="layout-tiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
   </definition>
</tiles-definitions>